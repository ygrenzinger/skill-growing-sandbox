<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
		<!-- TODO A externaliser dans un fichier -->
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.default_schema">ECOMMERCE</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<mapping class="com.carbon.ecommerce.domain.Client" />
        <mapping class="com.carbon.ecommerce.domain.Team" />
		<mapping class="com.carbon.ecommerce.domain.Item" />
		<mapping class="com.carbon.ecommerce.domain.Stock" />
    </session-factory>
</hibernate-configuration>
