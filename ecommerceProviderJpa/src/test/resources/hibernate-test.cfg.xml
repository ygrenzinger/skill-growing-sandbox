<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
		<!-- TODO A externaliser dans un fichier -->
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="show_sql">true</property>
		<property name="hibernate.connection.url">jdbc:h2:~/test</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.default_schema">TEST</property>
		<property name="hibernate.hbm2ddl.auto">create-drop</property>
		
		<mapping class="com.carbon.ecommerce.domain.Client" />
        <mapping class="com.carbon.ecommerce.domain.Category" />
		<mapping class="com.carbon.ecommerce.domain.Item" />
		<mapping class="com.carbon.ecommerce.domain.Stock" />
		<mapping class="com.carbon.ecommerce.domain.ReferenceSize" />
    </session-factory>
</hibernate-configuration>
